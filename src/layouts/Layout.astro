---
import '../styles/theme-variables.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A personal wiki for music artists and their connections' } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="wikipedia-blue" data-mode="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - PersonalJazzWiki</title>

    <!-- Inline settings initialization (prevents FOUC) -->
    <script is:inline>
      (function() {
        var STORAGE_KEY = 'wiki-settings';
        var defaults = {
          theme: 'wikipedia-blue',
          mode: 'system',
          fontSize: 'medium',
          articleWidth: 'medium',
          showToc: true,
          compactMode: false,
          externalLinksNewTab: true
        };

        var settings = defaults;
        try {
          var stored = localStorage.getItem(STORAGE_KEY);
          if (stored) settings = Object.assign({}, defaults, JSON.parse(stored));
        } catch(e) {}

        var html = document.documentElement;
        html.setAttribute('data-theme', settings.theme);

        // Determine effective mode
        var effectiveMode = settings.mode;
        if (settings.mode === 'system') {
          effectiveMode = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }
        html.setAttribute('data-mode', effectiveMode);

        // Apply other settings as data attributes
        html.setAttribute('data-compact', settings.compactMode);
        html.setAttribute('data-show-toc', settings.showToc);
        html.setAttribute('data-external-new-tab', settings.externalLinksNewTab);

        var fontSizes = { small: '14px', medium: '16px', large: '18px' };
        html.style.fontSize = fontSizes[settings.fontSize] || '16px';

        var widths = { narrow: '42rem', medium: '48rem', wide: '60rem' };
        html.style.setProperty('--article-max-width', widths[settings.articleWidth] || '48rem');

        var spacing = settings.compactMode ? '0.75' : '1';
        html.style.setProperty('--spacing-multiplier', spacing);
      })();
    </script>
  </head>
  <body class="bg-wiki-bg min-h-screen">
    <!-- Header -->
    <header class="bg-wiki-bg-content border-b border-wiki-border">
      <div class="max-w-6xl mx-auto px-4 py-3">
        <div class="flex items-center justify-between">
          <!-- Logo/Title -->
          <a href="/" class="flex items-center space-x-2 hover:no-underline">
            <span class="text-xl font-serif text-wiki-text font-bold">PersonalJazzWiki</span>
          </a>

          <!-- Navigation -->
          <nav class="flex items-center space-x-4">
            <a href="/" class="text-wiki-link hover:text-wiki-link-hover text-sm">Home</a>
            <a href="/artists" class="text-wiki-link hover:text-wiki-link-hover text-sm">All Artists</a>
            <a href="/genres" class="text-wiki-link hover:text-wiki-link-hover text-sm">Genres</a>
            <a href="/instruments" class="text-wiki-link hover:text-wiki-link-hover text-sm">Instruments</a>
            <a href="/random" class="text-wiki-link hover:text-wiki-link-hover text-sm">Random</a>
            <a href="/search" class="text-wiki-link hover:text-wiki-link-hover text-sm">Search</a>
            <a href="/settings" class="text-wiki-link hover:text-wiki-link-hover" title="Settings" aria-label="Settings">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-4 py-6">
      <div class="bg-wiki-bg-content border border-wiki-border rounded shadow-sm p-6">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-wiki-bg-content border-t border-wiki-border mt-8">
      <div class="max-w-6xl mx-auto px-4 py-4">
        <div class="flex flex-col md:flex-row justify-between items-center text-sm text-wiki-text-muted">
          <p>PersonalJazzWiki - A personal encyclopedia of music artists</p>
          <p class="mt-2 md:mt-0">
            Data from <a href="https://musicbrainz.org" class="text-wiki-link hover:underline">MusicBrainz</a>,
            <a href="https://spotify.com" class="text-wiki-link hover:underline">Spotify</a>, and
            <a href="https://wikipedia.org" class="text-wiki-link hover:underline">Wikipedia</a>
          </p>
        </div>
      </div>
    </footer>

    <!-- Global Styles -->
    <style is:global>
      /* Wiki link styling */
      .wiki-link {
        color: var(--color-link);
        text-decoration: none;
      }
      .wiki-link:hover {
        text-decoration: underline;
      }

      /* Red links for non-existent pages */
      .wiki-link-new {
        color: var(--color-link-red);
        text-decoration: none;
      }
      .wiki-link-new:hover {
        text-decoration: underline;
      }

      /* Article content styling */
      .article-content h1 {
        font-family: Georgia, 'Times New Roman', serif;
        font-size: 1.8rem;
        font-weight: 400;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.25rem;
        margin-bottom: calc(1rem * var(--spacing-multiplier, 1));
        color: var(--color-text);
      }

      .article-content h2 {
        font-family: Georgia, 'Times New Roman', serif;
        font-size: 1.5rem;
        font-weight: 400;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.25rem;
        margin-top: calc(1.5rem * var(--spacing-multiplier, 1));
        margin-bottom: calc(0.75rem * var(--spacing-multiplier, 1));
        color: var(--color-text);
      }

      .article-content h3 {
        font-family: Georgia, 'Times New Roman', serif;
        font-size: 1.2rem;
        font-weight: 600;
        margin-top: calc(1.25rem * var(--spacing-multiplier, 1));
        margin-bottom: calc(0.5rem * var(--spacing-multiplier, 1));
        color: var(--color-text);
      }

      .article-content p {
        margin-bottom: calc(1rem * var(--spacing-multiplier, 1));
        line-height: 1.65;
        color: var(--color-text);
      }

      .article-content ul,
      .article-content ol {
        margin-bottom: calc(1rem * var(--spacing-multiplier, 1));
        padding-left: 1.5rem;
        color: var(--color-text);
      }

      .article-content li {
        margin-bottom: calc(0.25rem * var(--spacing-multiplier, 1));
      }

      .article-content a {
        color: var(--color-link);
        text-decoration: none;
      }

      .article-content a:hover {
        text-decoration: underline;
        color: var(--color-link-hover);
      }

      /* Table styling */
      .article-content table {
        border-collapse: collapse;
        margin: calc(1rem * var(--spacing-multiplier, 1)) 0;
        width: 100%;
      }

      .article-content th,
      .article-content td {
        border: 1px solid var(--color-border);
        padding: 0.5rem;
        text-align: left;
        color: var(--color-text);
      }

      .article-content th {
        background-color: var(--color-bg-nav);
        font-weight: 600;
      }

      .article-content tr:nth-child(even) {
        background-color: var(--color-bg);
      }
    </style>

    <!-- External links behavior script -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        function updateExternalLinks() {
          var openInNewTab = document.documentElement.getAttribute('data-external-new-tab') === 'true';
          document.querySelectorAll('a[href^="http"]').forEach(function(link) {
            if (link.hostname === window.location.hostname) return;
            if (openInNewTab) {
              link.setAttribute('target', '_blank');
              link.setAttribute('rel', 'noopener noreferrer');
            } else {
              link.removeAttribute('target');
              link.removeAttribute('rel');
            }
          });
        }

        updateExternalLinks();

        // Re-run when settings change
        var observer = new MutationObserver(updateExternalLinks);
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ['data-external-new-tab']
        });

        // Listen for system color scheme changes
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
          var stored = localStorage.getItem('wiki-settings');
          var settings = stored ? JSON.parse(stored) : {};
          if (settings.mode === 'system') {
            document.documentElement.setAttribute('data-mode', e.matches ? 'dark' : 'light');
          }
        });
      });
    </script>
  </body>
</html>
