---
/**
 * Instruments Index - Browse all instruments
 * Uses D1 database for data
 */
import Layout from '../../layouts/Layout.astro';

// Access D1 from runtime env
const db = Astro.locals.runtime?.env?.DB;

// Set cache headers
Astro.response.headers.set('Cache-Control', 'public, max-age=3600, stale-while-revalidate=86400');

interface Instrument {
  id: number;
  name: string;
  slug: string;
  artist_count: number;
}

let instruments: Instrument[] = [];
let totalArtists = 0;
let errorMessage = '';

if (db) {
  try {
    // Get all instruments from lookup table
    const { results } = await db
      .prepare('SELECT id, name, slug, artist_count FROM instruments ORDER BY artist_count DESC')
      .all();
    instruments = results as Instrument[];

    // Get total artist count
    const countResult = await db
      .prepare('SELECT COUNT(*) as count FROM artists')
      .first();
    totalArtists = (countResult as { count: number })?.count || 0;
  } catch (error) {
    console.error('Error loading instruments:', error);
    errorMessage = 'Failed to load instruments.';
  }
} else {
  errorMessage = 'Database not available.';
}

// Group instruments by category
const categorizeInstrument = (instrument: string): string => {
  const lowerInstrument = instrument.toLowerCase();

  // Strings
  if (['guitar', 'bass', 'violin', 'viola', 'cello', 'double bass', 'banjo', 'mandolin', 'ukulele', 'harp', 'sitar'].some(s => lowerInstrument.includes(s))) {
    return 'Strings';
  }
  // Keyboards
  if (['piano', 'keyboard', 'organ', 'synthesizer', 'accordion', 'harpsichord', 'rhodes', 'mellotron'].some(s => lowerInstrument.includes(s))) {
    return 'Keyboards';
  }
  // Brass
  if (['trumpet', 'trombone', 'tuba', 'french horn', 'cornet', 'flugelhorn', 'euphonium'].some(s => lowerInstrument.includes(s))) {
    return 'Brass';
  }
  // Woodwinds
  if (['saxophone', 'clarinet', 'flute', 'oboe', 'bassoon', 'recorder', 'harmonica'].some(s => lowerInstrument.includes(s))) {
    return 'Woodwinds';
  }
  // Percussion
  if (['drum', 'percussion', 'timpani', 'vibraphone', 'marimba', 'xylophone', 'congas', 'bongos', 'tambourine', 'cymbals'].some(s => lowerInstrument.includes(s))) {
    return 'Percussion';
  }
  // Voice
  if (['voice', 'vocal', 'singing'].some(s => lowerInstrument.includes(s))) {
    return 'Voice';
  }
  // Electronic
  if (['turntable', 'sampler', 'drum machine', 'sequencer', 'dj'].some(s => lowerInstrument.includes(s))) {
    return 'Electronic';
  }

  return 'Other';
};

// Group by category
const instrumentsByCategory = new Map<string, Instrument[]>();
instruments.forEach(instrument => {
  const category = categorizeInstrument(instrument.name);
  if (!instrumentsByCategory.has(category)) {
    instrumentsByCategory.set(category, []);
  }
  instrumentsByCategory.get(category)!.push(instrument);
});

// Sort categories by total count
const categoryOrder = ['Voice', 'Strings', 'Keyboards', 'Brass', 'Woodwinds', 'Percussion', 'Electronic', 'Other'];
const sortedCategories = categoryOrder
  .filter(cat => instrumentsByCategory.has(cat))
  .map(cat => [cat, instrumentsByCategory.get(cat)!] as [string, Instrument[]]);

// Stats
const totalInstruments = instruments.length;
const topInstrument = instruments[0];
---

<Layout title="Instruments">
  <div class="article-content">
    <h1>Browse by Instrument</h1>

    {errorMessage ? (
      <p class="text-red-600">{errorMessage}</p>
    ) : (
      <>
        <p class="text-wiki-text-secondary mb-6">
          Explore <strong>{totalInstruments}</strong> instruments across <strong>{totalArtists.toLocaleString()}</strong> artists.
          {topInstrument && (
            <>
              The most common instrument is <a href={`/instruments/${topInstrument.slug}`} class="text-wiki-link">{topInstrument.name}</a> with {topInstrument.artist_count.toLocaleString()} artists.
            </>
          )}
        </p>

        <!-- Top Instruments Quick Links -->
        <div class="bg-wiki-accent-light border border-wiki-border rounded p-4 mb-8">
          <h2 class="text-lg font-serif mb-3">Top Instruments</h2>
          <div class="flex flex-wrap gap-2">
            {instruments.slice(0, 15).map(instrument => (
              <a
                href={`/instruments/${instrument.slug}`}
                class="inline-flex items-center px-3 py-1.5 bg-white border border-wiki-border rounded text-sm hover:bg-wiki-bg hover:border-wiki-link transition-colors"
              >
                <span class="text-wiki-link font-medium">{instrument.name}</span>
                <span class="ml-2 text-wiki-text-muted text-xs">({instrument.artist_count.toLocaleString()})</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Instruments by Category -->
        <div class="space-y-8">
          {sortedCategories.map(([category, categoryInstruments]) => {
            const categoryTotal = categoryInstruments.reduce((sum, i) => sum + i.artist_count, 0);
            return (
              <section>
                <h2 class="text-xl font-serif border-b border-wiki-border pb-2 mb-4">
                  {category}
                  <span class="text-wiki-text-muted text-sm font-normal ml-2">
                    ({categoryInstruments.length} instruments)
                  </span>
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
                  {categoryInstruments.map(instrument => (
                    <a
                      href={`/instruments/${instrument.slug}`}
                      class="flex items-center justify-between p-2 hover:bg-wiki-accent-light rounded border border-transparent hover:border-wiki-border-light transition-colors"
                    >
                      <span class="text-wiki-link">{instrument.name}</span>
                      <span class="text-wiki-text-muted text-sm">{instrument.artist_count.toLocaleString()} artists</span>
                    </a>
                  ))}
                </div>
              </section>
            );
          })}
        </div>

        <!-- All Instruments Alphabetical (collapsed) -->
        <details class="mt-8 border border-wiki-border rounded">
          <summary class="p-4 bg-wiki-bg-nav cursor-pointer hover:bg-wiki-accent-light font-medium">
            View all {totalInstruments} instruments alphabetically
          </summary>
          <div class="p-4 max-h-96 overflow-y-auto">
            <div class="columns-2 md:columns-3 lg:columns-4 gap-4">
              {instruments
                .slice()
                .sort((a, b) => a.name.localeCompare(b.name))
                .map(instrument => (
                  <a
                    href={`/instruments/${instrument.slug}`}
                    class="block text-wiki-link hover:underline text-sm py-0.5 break-inside-avoid"
                  >
                    {instrument.name} <span class="text-wiki-text-muted">({instrument.artist_count})</span>
                  </a>
                ))}
            </div>
          </div>
        </details>
      </>
    )}
  </div>
</Layout>
